{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "jsx": "preserve",
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "lib": ["ESNext", "DOM"],
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ]
}